{% extends '::base.html.twig' %}


{% block title %}
    {{ 'zimzim_bundles_app_requestuser.index.title'|trans }}
{% endblock title %}

{% block page %}
    <div class="row">
        <div class="small-12 large-12 columns">
            <h1 class="text-center title">RequestUser edit</h1>
        </div>
    </div>
    <div class="row">
        <div class="small-12 large-12 columns">
            {{ form(edit_form) }}
        </div>
    </div>

    <div class="row">
        <div class="small-12 large-4 columns text-center">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="tiny button round" href="{{ path('zimzim_bundles_app_adminrequestuser') }}">
                    {{ 'link.return'|trans }}
                </a>
            {% else %}
                <a class="tiny button round" href="{{ path('zimzim_bundles_app_requestuser') }}">
                    {{ 'link.return'|trans }}
                </a>
            {% endif %}
        </div>
        <div class="small-12 large-4 columns text-center">
            {{ form(delete_form) }}
        </div>
    </div>

{% endblock %}
