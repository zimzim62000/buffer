{% extends '::base.html.twig' %}

{% block title %}
    {{ 'views.bundles.app.usertournament.index.title'|trans }}
{% endblock title %}

{% block page %}

    <div class="row">
        <div class="small-12 columns">
            <h1 class="text-center headerpagehome">
                {{ 'views.bundles.app.usertournament.index.title'|trans }}
            </h1>
        </div>
    </div>

    {% for entity in entities %}

        <div class="row">
            <div class="small-4 columns">
                <h3 class="text-left">
                    <a class="tiny button round"
                       href="{{ path('zimzim_bundles_app_usertournament_updateuser', {'id': entity.id}) }}">
                        {{ 'button.update'|trans }}
                    </a>
                </h3>
            </div>
            <div class="small-8 columns">
                <h2 class="text-left headerpagehome">
                    {{ entity.name }}
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="small-12 columns">
                <h3 class="text-center headerpagehome">
                    {{ 'views.bundles.app.usertournament.index.requestuser'|trans }}
                </h3>
            </div>
        </div>

        {% for requestUser in entity.requestsUser %}
            {% include 'ZIMZIMBundlesAppBundle:RequestUser:include/line.html.twig' with{'requestUser': requestUser} %}
        {% endfor %}

    {% endfor %}

    <div class="row">
        <div class="small-12 columns">
            <h2 class="text-center headerpagehome">
                {{ 'views.bundles.app.usertournament.index.tournaments'|trans }}
            </h2>
        </div>
    </div>

    {% for Tournament in Tournaments %}

        <div class="row">
            <div class="small-6 columns">
                <h2 class="text-center headerpagehome">
                    {{ Tournament.name }}
                </h2>
            </div>
            <div class="small-6 columns">
                <h3 class="text-center">
                    <a class="tiny button round"
                       href="{{ path('zimzim_bundles_app_usertournament_newuser', {'id': Tournament.id}) }}">
                        {{ 'button.createtournament'|trans }}
                    </a>
                </h3>
            </div>
        </div>

    {% endfor %}

{% endblock %}
